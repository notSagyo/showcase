---
import Design from '@/components/Showcase.astro';
import { showcaseItems, type ShowcaseList } from '@/showcase';
import type { GetStaticPaths } from 'astro';

export const getStaticPaths = (() => {
  const ids = (Object.keys(showcaseItems) as ShowcaseList[]).map((key) => key);
  const paths = ids.map((id) => ({ params: { id } }));

  return paths;
}) satisfies GetStaticPaths;

const id = Astro.params.id;
---

<Design {id} />
