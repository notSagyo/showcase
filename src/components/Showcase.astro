---
import Navigator from '@/components/Navigator.astro';
import Layout from '@/layouts/Layout.astro';
import { showcaseItems, type ShowcaseList } from '@/showcase';
import NewHeight from './NewHeight/NewHeight';

interface Props {
  id: ShowcaseList;
}

const id = Astro.props.id;
const design = showcaseItems[id];
const codeUrl = design.codeUrl;
const sourceUrl = design.sourceUrl;
const prevUrl = design.prev ? `./${design.prev}` : undefined;
const nextUrl = design.next ? `./${design.next}` : undefined;
---

<Layout title={design.title}>
  {
    {
      NewHeight: <NewHeight client:load />,
    }[id]
  }

  <Navigator sourceUrl={sourceUrl} codeUrl={codeUrl} {prevUrl} {nextUrl} />
</Layout>
